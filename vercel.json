{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontned/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/health",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}