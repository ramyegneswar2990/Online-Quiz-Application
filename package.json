{
    "name": "online-quiz-application",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npm run build-frontend",
        "start": "npm run start-backend",
        "postinstall": "npm run install-all",
        "install-all": "npm install --prefix backend && npm install --prefix frontned",
        "start-backend": "node backend/src/server.js",
        "start-frontend": "npm run dev --prefix frontned",
        "build-frontend": "npm run build --prefix frontned",
        "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}